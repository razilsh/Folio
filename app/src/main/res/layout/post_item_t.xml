<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="post"
      type="dev.razil.folio.core.data.Post" />

    <import type="dev.razil.folio.util.ExtensionsKt" />

    <variable
      name="clickListener"
      type="android.view.View.OnClickListener" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_vh"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:onClick="@{clickListener}"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:ignore="UnusedAttribute"
    tools:layout_height="match_parent"
    tools:targetApi="m">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/subreddit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interuiregular"
        android:gravity="bottom"
        android:text="@{post.subreddit}"
        android:textColor="@color/blue_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="r/programming" />

      <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/interuimedium"
        android:text="@{post.title}"
        android:textColor="#bbb"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subreddit"
        tools:maxLines="5"
        tools:text="@tools:sample/lorem/random" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/interuiregular"
        android:text="@{ExtensionsKt.compactFormat(post.score)+ ` points   ` + ExtensionsKt.compactFormat(post.totalComments) + ` comments`}"
        android:textColor="#a0a0a0"
        tools:text="@tools:sample/lorem"
        android:textSize="11sp" />
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
      android:id="@+id/thumbnail"
      android:layout_width="70dp"
      android:layout_marginStart="8dp"
      android:layout_height="70dp"
      android:layout_gravity="center_vertical"
      android:elevation="10dp"
      android:scaleType="centerCrop"
      android:transitionName="@string/transition_name"
      android:visibility="visible"
      app:loadImage="@{post.thumbnail}"
      app:riv_border_color="#777"
      app:riv_border_width="1dp"
      app:riv_corner_radius="4dp"
      tools:ignore="ContentDescription"
      tools:srcCompat="@tools:sample/avatars" />

  </LinearLayout>
</layout>