<resources>
  <attr name="dank_font_family" format="reference" />

  <declare-styleable name="DankToolbar">
    <attr name="navigationIcon" format="reference" />
    <attr name="navigationIconTint" format="color" />
  </declare-styleable>

  <declare-styleable name="EditTextWithPrefix">
    <attr name="prefix" format="string" />
  </declare-styleable>

  <declare-styleable name="IndentedLayout">
    <attr name="spacePerDepth" format="dimension" />
    <attr name="indentationLineColor" format="color" />
    <attr name="indentationLineWidth" format="dimension" />
  </declare-styleable>

  <declare-styleable name="ViewFlipperWithDebugPreview">
    <attr name="debug_displayedChild" format="integer" />
  </declare-styleable>

  <declare-styleable name="ErrorStateView">
    <attr name="emojiVisible" format="boolean" />
  </declare-styleable>

  <declare-styleable name="EmptyStateView">
    <attr name="emptyState_emoji" format="string"/>
    <attr name="emptyState_message" format="string"/>
  </declare-styleable>

  <declare-styleable name="ProgressWithFileSizeView">
    <attr name="progressBarSize" format="dimension" />
  </declare-styleable>

  <declare-styleable name="AspectRatioImageView">
    <attr name="aspectRatio" format="float" />
    <attr name="aspectRatioEnabled" format="boolean" />
    <attr name="dominantMeasurement">
      <enum name="width" value="0" />
      <enum name="height" value="1" />
    </attr>
  </declare-styleable>

  <declare-styleable name="AnimatedToolbarBackground">
    <attr name="clickableWhenFilled" format="boolean" />
  </declare-styleable>
</resources>
